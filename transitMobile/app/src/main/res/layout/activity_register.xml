<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F1EFF0"
    tools:context=".Register.View.RegisterActivity">

    <ImageView
        android:layout_width="137dp"
        android:layout_height="64dp"
        android:background="@drawable/logo_tr"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Registro"
        android:textColor="#3F734C"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Crea una nueva cuenta"
        android:textColor="#AAAFAB"
        android:textSize="20sp"
        android:textStyle="bold" />



    <EditText
        android:id="@+id/txtNombreR"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/persona"
        android:drawablePadding="10dp"
        android:hint="Ingrese su nombre"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_nombre"
        android:textColor="#3F734C"
        android:textStyle="bold"
        android:textColorHint="#3F734C"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:padding="15dp"
        android:id="@+id/txtApellidoR"
        android:drawableLeft="@drawable/persona2"
        android:drawablePadding="10dp"
        android:hint="Ingrese su apellido"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_nombre"
        android:textColor="#3F734C"
        android:textStyle="bold"
        android:textColorHint="#3F734C"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:id="@+id/txtCorreoR"
        android:padding="15dp"
        android:drawableLeft="@drawable/email2"
        android:drawablePadding="10dp"
        android:hint="Ingrese correo"
        android:background="@drawable/shape_nombre"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textColor="#3F734C"
        android:textStyle="bold"
        android:textColorHint="#3F734C"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su contraseña"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/contra2"
        android:padding="15dp"
        android:background="@drawable/shape_nombre"
        android:id="@+id/txtContrasenaR"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#3F734C"
        android:textStyle="bold"
        android:textColorHint="#3F734C"
        android:ems="10"
        android:inputType="textPassword"/>

    <ProgressBar
        android:id="@+id/barra_progresoR"
        style="?android:attr/progressBarStyle"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#46FF4D"/>

    <Button
        android:id="@+id/btn_registro"
        android:layout_width="313dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#3F734C"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_volver"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#D9E4DC"
android:background="@drawable/redondear"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="¿Ya tienes una cuenta?"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lblVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Inicia sesión!"
        android:textColor="#3F734C"
        android:textSize="20sp"
        android:textStyle="normal|bold" />


</LinearLayout>